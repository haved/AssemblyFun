<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.havard.assemblyfun" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_assemblyfun"
        android:label="@string/app_name">
        <activity
            android:name=".AssemblyFunMenu"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TaskBrowser"
            android:label="@string/title_activity_task_browser"
            android:theme="@style/TaskBrowserTheme">
            android:parentActivityName="me.havard.assemblyfun.AssemblyFunMenu"
        </activity>
    </application>

</manifest>
